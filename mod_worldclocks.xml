                <field
                    name="display_style"
                    type="list"
                    label="MOD_WORLDCLOCKS_FIELD_DISPLAY_STYLE_LABEL"
                    description="MOD_WORLDCLOCKS_FIELD_DISPLAY_STYLE_DESC"
                    default="digital"
                >
                    <option value="text">MOD_WORLDCLOCKS_STYLE_TEXT</option>
                    <option value="digital">MOD_WORLDCLOCKS_STYLE_DIGITAL</option>
                    <option value="analog">MOD_WORLDCLOCKS_STYLE_ANALOG</option>
                </field>

                <field
                    name="time_format"
                    type="list"
                    label="MOD_WORLDCLOCKS_FIELD_TIME_FORMAT_LABEL"
                    description="MOD_WORLDCLOCKS_FIELD_TIME_FORMAT_DESC"
                    default="12"
                >
                    <option value="12">MOD_WORLDCLOCKS_FORMAT_12H</option>
                    <option value="24">MOD_WORLDCLOCKS_FORMAT_24H</option>
                </field>

                <field
                    name="show_seconds"
                    type="radio"
                    label="MOD_WORLDCLOCKS_FIELD_SHOW_SECONDS_LABEL"
                    description="MOD_WORLDCLOCKS_FIELD_SHOW_SECONDS_DESC"
                    default="1"
                    class="btn-group btn-group-yesno"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field
                    name="show_date"
                    type="radio"
                    label="MOD_WORLDCLOCKS_FIELD_SHOW_DATE_LABEL"
                    description="MOD_WORLDCLOCKS_FIELD_SHOW_DATE_DESC"
                    default="0"
                    class="btn-group btn-group-yesno"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
