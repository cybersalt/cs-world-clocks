                    <option value="Europe/Zurich">MOD_WORLDCLOCKS_CAPITAL_BERN</option>
                    <option value="Europe/Moscow">MOD_WORLDCLOCKS_CAPITAL_MOSCOW</option>
                    <option value="Europe/Kiev">MOD_WORLDCLOCKS_CAPITAL_KYIV</option>
                    <option value="America/New_York">MOD_WORLDCLOCKS_CAPITAL_WASHINGTON</option>
                    <option value="America/Toronto">MOD_WORLDCLOCKS_CAPITAL_OTTAWA</option>
                    <option value="America/Mexico_City">MOD_WORLDCLOCKS_CAPITAL_MEXICO_CITY</option>
