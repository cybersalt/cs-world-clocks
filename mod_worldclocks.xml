    <version>1.0.0</version>
    <description>MOD_WORLDCLOCKS_DESC</description>
    <namespace path="src">Cybersalt\Module\WorldClocks</namespace>

    <files>
        <folder module="mod_worldclocks">services</folder>
        <folder>language</folder>
        <folder>src</folder>
        <folder>tmpl</folder>
