            <fieldset name="advanced">
                <field
                    name="moduleclass_sfx"
                    type="textarea"
                    label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                    description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
                    rows="3"
                />

                <field
                    name="custom_css"
                    type="textarea"
                    label="MOD_WORLDCLOCKS_FIELD_CUSTOM_CSS_LABEL"
                    description="MOD_WORLDCLOCKS_FIELD_CUSTOM_CSS_DESC"
                    rows="10"
                    filter="raw"
                    class="input-xxlarge"
                />
            </fieldset>
        </fields>
